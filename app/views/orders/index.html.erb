<h5>Orders for <%= current_user.name %>:</h5>


<div class="row">
  <div class="m4">
    <div class="card grey darken-1 large">
      <% if @orders.empty? %>
      <div>No orders to show! <%= link_to "Browse", items_path %></div>
      <% end %>

      <table class='responsive-table centered bordered'>
        <thead>
          <tr>
            <th>Ordered On</th>
            <th>Total Quantity</th>
            <th>Total Order Price</th>
            <th>Status</th>
          </tr>
        </thead>

        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><a><%= link_to order.created_at.strftime('%a %b %e %Y %H:%M'), order_path(order) %></a></td>
            <td><%= order.total_quantity %></td>
            <td><%= order.total_price_when_ordered %></td>
            <td><%= order.status %></td>
          </tr>
        </tbody>
        <% end %>
      </table>

    </div>
  </div>
</div>
